@model IEnumerable<CarServices.Models.CarModel>


@{
    ViewBag.Title = "ViewAll";
}

<h2>Svi auti</h2>

@Html.ActionLink("Unesite novi auto", "AddOrEdit", "Car")
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.id_car)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Car_name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id_car)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Car_name)
                    </td>
                    <td>
                        <!-- Link za akciju uređivanja naziva auta -->
                        @Html.ActionLink("Uredi", "AddOrEdit", new { id = item.id_car }) |
                        <!-- Link za akciju pregleda servisa po autu -->
                        @Html.ActionLink("Servisi", "Overview", new { id = item.id_car }) |
                        <!-- Link za akciju brisanja -->
                        @Html.ActionLink("Izbriši", "Delete", new { id = item.id_car })
                    </td>
                </tr>
            }

        </table>
    </div>
}

<div>
    @Html.ActionLink("Povratak na početnu", "Index", "Service")

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
